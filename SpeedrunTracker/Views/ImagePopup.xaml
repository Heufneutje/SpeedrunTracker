<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="SpeedrunTracker.Views.ImagePopup"
               xmlns:ffil="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:viewmodels="clr-namespace:SpeedrunTracker.ViewModels"
               CanBeDismissedByTappingOutsideOfPopup="True"
               x:DataType="viewmodels:ImagePopupViewModel"
               Style="{StaticResource PopupStyle}">
    <VerticalStackLayout Padding="20">
        <ffil:CachedImage Source="{Binding ImageSource}" />
    </VerticalStackLayout>
</toolkit:Popup>
