<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:loc="clr-namespace:SpeedrunTracker.Resources.Localization"
             xmlns:viewmodels="clr-namespace:SpeedrunTracker.ViewModels"
             x:DataType="viewmodels:SettingsViewModel"
             x:Class="SpeedrunTracker.Views.SettingsPage"
             Title="{x:Static loc:AppStrings.MenuItemSettingsTitle}"
             Disappearing="ContentPage_Disappearing">
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Border Style="{StaticResource TransparentGridElementBorder}">
                <Grid ColumnDefinitions="2*,*"
                      RowDefinitions="Auto,Auto,Auto,Auto"
                      Padding="0,0,20,10">
                    <Label Text="{x:Static loc:AppStrings.SettingsPageInterfaceGroupHeader}"
                           Style="{StaticResource GroupHeaderLabel}"
                           Grid.Row="0"
                           Grid.ColumnSpan="2" />
                    <Label Text="{x:Static loc:AppStrings.SettingsPageThemeItem}"
                           Style="{StaticResource SettingsItemSubLabel}"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalOptions="Center" />
                    <Picker ItemsSource="{Binding Themes}"
                            SelectedItem="{Binding Theme}"
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalOptions="Center" />
                    <Label Text="{x:Static loc:AppStrings.SettingsPageLanguageItem}"
                           Style="{StaticResource SettingsItemSubLabel}"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalOptions="Center" />
                    <Picker ItemsSource="{Binding LanguageSettings}"
                            SelectedItem="{Binding AppLanguage}"
                            Grid.Row="2"
                            Grid.Column="1"
                            VerticalOptions="Center" />
                    <Label Text="{x:Static loc:AppStrings.SettingsPageBackgroundsItem}"
                           Style="{StaticResource SettingsItemSubLabel}"
                           Grid.Row="3"
                           Grid.Column="0"
                           VerticalOptions="Center" />
                    <Switch IsToggled="{Binding DisplayBackgrounds}"
                            HorizontalOptions="Start"
                            Grid.Row="3"
                            Grid.Column="1"
                            VerticalOptions="Center"
                            Margin="-10,0,0,0"/>
                </Grid>
            </Border>

            <Border Style="{StaticResource TransparentGridElementBorder}">
                <Grid ColumnDefinitions="2*,*"
                      RowDefinitions="Auto,Auto,Auto"
                      Padding="0,0,20,10">
                    <Label Text="{x:Static loc:AppStrings.SettingsPageDateTimeGroupHeader}"
                           Style="{StaticResource GroupHeaderLabel}"
                           Grid.Row="0"
                           Grid.ColumnSpan="2" />
                    <Label Text="{x:Static loc:AppStrings.SettingsPageDateFormatItem}"
                           Style="{StaticResource SettingsItemSubLabel}"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalOptions="Center" />
                    <Picker ItemsSource="{Binding DateFormats}"
                            SelectedItem="{Binding DateFormat}"
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalOptions="Center" />
                    <Label Text="{x:Static loc:AppStrings.SettingePageTimeFormatItem}"
                           Style="{StaticResource SettingsItemSubLabel}"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalOptions="Center" />
                    <Picker ItemsSource="{Binding TimeFormats}"
                            SelectedItem="{Binding TimeFormat}"
                            Grid.Row="2"
                            Grid.Column="1"
                            VerticalOptions="Center" />
                </Grid>
            </Border>

            <Border Style="{StaticResource TransparentGridElementBorder}">
                <Grid ColumnDefinitions="*,Auto"
                      RowDefinitions="Auto,Auto"
                      Padding="0,0,20,10">
                    <Label Text="{x:Static loc:AppStrings.SettingsPageMaximumLeaderboardResultsGroupHeader}"
                           Style="{StaticResource GroupHeaderLabel}"
                           Grid.Row="0"
                           Grid.ColumnSpan="2" />
                    <Slider Minimum="1"
                            Maximum="1000"
                            Value="{Binding MaxLeaderboardResults, Mode=TwoWay}"
                            Margin="10,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0" />
                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding MaxLeaderboardResults}" />
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
