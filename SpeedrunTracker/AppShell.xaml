<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:ffil="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
       xmlns:loc="clr-namespace:SpeedrunTracker.Resources.Localization"
       xmlns:views="clr-namespace:SpeedrunTracker.Views"
       xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
       x:Class="SpeedrunTracker.AppShell"
       FlyoutBackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}">
    <Shell.ItemTemplate>
        <DataTemplate x:DataType="BaseShellItem">
            <Grid Style="{StaticResource FlyoutItemStyle}"
                  ColumnDefinitions="50,150">
                <ffil:CachedImage Source="{Binding FlyoutIcon}"
                                  Margin="10"
                                  HeightRequest="30">
                    <ffil:CachedImage.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource White}" />
                    </ffil:CachedImage.Behaviors>
                </ffil:CachedImage>
                <Label Grid.Column="1"
                       Text="{Binding Title}"
                       Style="{StaticResource FlyoutItemLabelStyle}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Label Text="{x:Static loc:AppStrings.AppName}"
                   FontSize="Title"
                   Padding="20"
                   TextColor="{StaticResource White}" />
            <ffil:CachedImage Source="main"
                              HeightRequest="150"
                              HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent ContentTemplate="{DataTemplate views:FollowingPage}"
                      Route="Following"
                      Title="{x:Static loc:AppStrings.MenuItemFavoritesTitle}"
                      Icon="following" />
        <Tab Title="{x:Static loc:AppStrings.MenuItemSearchTitle}"
             Icon="search">
            <ShellContent ContentTemplate="{DataTemplate views:GameSearchPage}"
                          Route="SearchGames"
                          Title="{x:Static loc:AppStrings.MenuItemSearchGamesTabTitle}" />
            <ShellContent ContentTemplate="{DataTemplate views:GameSeriesSearchPage}"
                          Route="SearchSeries"
                          Title="{x:Static loc:AppStrings.MenuItemSearchGameSeriesTabTitle}" />
            <ShellContent ContentTemplate="{DataTemplate views:UserSearchPage}"
                          Route="SearchUsers"
                          Title="{x:Static loc:AppStrings.MenuItemSearchUsersTabTitle}" />
        </Tab>
        <ShellContent ContentTemplate="{DataTemplate views:NotificationsPage}"
                      Route="Notifications"
                      Title="{x:Static loc:AppStrings.MenuItemNotificationsTitle}"
                      Icon="bell" />
    </FlyoutItem>
    <FlyoutItem Title="{x:Static loc:AppStrings.MenuItemProfileTitle}"
                FlyoutIcon="user">
        <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}"
                      Route="Profile" />
    </FlyoutItem>

    <FlyoutItem Title="{x:Static loc:AppStrings.MenuItemSettingsTitle}"
                FlyoutIcon="gear">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"
                      Route="Settings" />
    </FlyoutItem>

    <FlyoutItem Title="{x:Static loc:AppStrings.MenuItemAboutTitle}"
                FlyoutIcon="about">
        <ShellContent ContentTemplate="{DataTemplate views:AboutPage}"
                      Route="about" />
    </FlyoutItem>
</Shell>
